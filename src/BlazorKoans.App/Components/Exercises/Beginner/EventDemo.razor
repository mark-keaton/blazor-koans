<div>
    <button class="increment" @onclick="IncrementClickCount">+</button>
    <span class="click-count">@clickCount</span>
    <button class="decrement" @onclick="DecrementClickCount">-</button>
    <button class="event-callback-button" @onclick="HandleButtonClick">Click Me</button>
    <p class="message">@message</p>
    <input type="text" @bind="inputValue" />
    <button class="submit-button" @onclick="HandleSubmit" @onclick:preventDefault="true">Submit</button>
    <p class="submitted-value">@submittedValue</p>
</div>

@code {
    [Parameter]
    public EventCallback OnButtonClick { get; set; }            // âš¡ No data sent to parent

    [Parameter]
    public EventCallback<string> OnSubmit { get; set; }         // âš¡ Sends string to parent

    private int clickCount = 0;
    private string message = string.Empty;
    private string inputValue = string.Empty;
    private string submittedValue = string.Empty;

    private void IncrementClickCount()
    {
        clickCount++;
    }

    private void DecrementClickCount()
    {
        clickCount--;
    }

    private async Task HandleButtonClick()
    {
        message = "Button was clicked!";
        await OnButtonClick.InvokeAsync();                      // âš¡ Calls parent's handler
    }

    private async Task HandleSubmit()
    {
        submittedValue = inputValue;
        await OnSubmit.InvokeAsync(inputValue);                 // âš¡ Sends data TO parent
    }
}
