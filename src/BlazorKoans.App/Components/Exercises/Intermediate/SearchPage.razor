@page "/search"
@inject NavigationManager Navigation

<h3>Search Page</h3>

<p>Query: @Query</p>
<p>Search Term: @SearchTerm</p>
<p>Current URL: @Navigation.Uri</p>

<button @onclick="NavigateToHome">Go to Home</button>

@code {
    [Parameter]
    // TODO: Add the attribute that binds this property to the URL query string.
    // HINT: The attribute name starts with "SupplyParameter..."
    // [???]
    // TODO: Make this property nullable (optional) so the page works without a query string.
    public string Query { get; set; } = "";

    [Parameter]
    // TODO: Add the attribute that binds this property to ?q=value in the URL.
    // HINT: Use the Name parameter to customize the query key: (Name = "q")
    [SupplyParameterFromQuery]
    public string? SearchTerm { get; set; }

    private void NavigateToHome()
    {
        Navigation.NavigateTo("/");
    }
}
