@using BlazorKoans.App.Models
@rendermode InteractiveServer

<h3>Filtering Demo</h3>

<RadzenDataGrid Data="@employees" TItem="Employee" AllowFiltering="true" FilterMode="FilterMode.Simple" Style="width: 100%">
    <Columns>
        <RadzenDataGridColumn TItem="Employee" Property="Name" Title="Name">
            <FilterTemplate>
                <RadzenTextBox Placeholder="Filter by name..." @bind-Value="@context.FilterValue" />
            </FilterTemplate>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="Employee" Property="Department" Title="Department">
            <FilterTemplate>
                <RadzenTextBox Placeholder="Filter by department..." @bind-Value="@context.FilterValue" />
            </FilterTemplate>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="Employee" Property="Salary" Title="Salary" FormatString="{0:C}" TextAlign="TextAlign.Right" />
        <RadzenDataGridColumn TItem="Employee" Property="HireDate" Title="Hire Date" FormatString="{0:d}" />
        <RadzenDataGridColumn TItem="Employee" Title="Actions" Width="120px" Filterable="false" Sortable="false">
            <Template Context="employee">
                <RadzenButton Text="View" Size="ButtonSize.Small" />
            </Template>
        </RadzenDataGridColumn>
    </Columns>
</RadzenDataGrid>

