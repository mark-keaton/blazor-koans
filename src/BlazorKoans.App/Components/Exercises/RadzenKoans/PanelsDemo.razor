@rendermode InteractiveServer

<h3>Panels Demo</h3>

<div style="display: flex; flex-direction: column; gap: 1rem; max-width: 800px;">
    <RadzenPanel AllowCollapse="true" Collapsed="false">
        <HeaderTemplate>
            <span>Collapsible Panel</span>
        </HeaderTemplate>
        <ChildContent>
            <p>This panel can be collapsed by clicking the header.</p>
            <p>When collapsed, this content is hidden but remains in the DOM.</p>
        </ChildContent>
    </RadzenPanel>

    <RadzenPanel AllowCollapse="true" Collapsed="true">
        <HeaderTemplate>
            <span>Initially Collapsed Panel</span>
        </HeaderTemplate>
        <ChildContent>
            <p>This panel starts in a collapsed state.</p>
            <p>Expand it to see this content.</p>
        </ChildContent>
    </RadzenPanel>
    <p>Panel Status: @(isPanelCollapsed ? "Collapsed" : "Expanded")</p>

    <RadzenPanel AllowCollapse="false">
        <HeaderTemplate>
            <span>Non-Collapsible Panel</span>
        </HeaderTemplate>
        <ChildContent>
            <p>This panel cannot be collapsed. It always shows its content.</p>
        </ChildContent>
    </RadzenPanel>

    <RadzenFieldset Text="User Information">
        <div style="display: flex; flex-direction: column; gap: 0.5rem;">
            <div>
                <label>First Name:</label>
                <input type="text" class="rz-textbox" />
            </div>
            <div>
                <label>Last Name:</label>
                <input type="text" class="rz-textbox" />
            </div>
            <div>
                <label>Email:</label>
                <input type="email" class="rz-textbox" />
            </div>
        </div>
    </RadzenFieldset>

    <RadzenFieldset Text="Preferences" Style="border-color: #0ea5e9;">
        <div>
            <label>
                <input type="checkbox" /> Receive newsletter
            </label>
        </div>
        <div>
            <label>
                <input type="checkbox" /> Enable notifications
            </label>
        </div>
    </RadzenFieldset>
</div>

@code {
    private bool isPanelCollapsed = true;
}
