@using global::Radzen.Blazor
@rendermode InteractiveServer

<h3>Radzen Setup Demo</h3>

<RadzenCard Style="margin: 1rem 0;">
    <h4>Welcome to Radzen Blazor</h4>
    <p>Welcome to Radzen Blazor components! This card demonstrates basic Radzen setup.</p>
    <p>Radzen provides 100+ native Blazor components for building modern web applications.</p>

    <div class="mt-3">
        <RadzenButton Text="Click Me!" Click="@IncrementCount" />
    </div>

    <div class="mt-2">
        <p>Button clicked @clickCount @(clickCount == 1 ? "time" : "times")</p>
    </div>
</RadzenCard>

@code {
    private int clickCount = 0;

    private void IncrementCount()
    {
        clickCount++;
    }
}
