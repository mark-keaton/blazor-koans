@using BlazorKoans.App.Models
@using global::Radzen.Blazor
@using global::Radzen
@rendermode InteractiveServer

<h3>Sorting Demo</h3>

<p><em>Click column headers to sort. Hold Shift and click another column for multi-column sorting.</em></p>

<RadzenDataGrid Data="@employees" TItem="Employee" AllowSorting="true" AllowMultiColumnSorting="true" Style="width: 100%">
    <Columns>
        <RadzenDataGridColumn TItem="Employee" Property="Name" Title="Name" />
        <RadzenDataGridColumn TItem="Employee" Property="Department" Title="Department" />
        <RadzenDataGridColumn TItem="Employee" Property="Salary" Title="Salary" FormatString="{0:C}" TextAlign="global::Radzen.TextAlign.Right" />
        <RadzenDataGridColumn TItem="Employee" Property="HireDate" Title="Hire Date" FormatString="{0:d}" />
        <RadzenDataGridColumn TItem="Employee" Title="Actions" Width="120px" Sortable="false">
            <Template Context="employee">
                <RadzenButton Text="View" Size="global::Radzen.ButtonSize.Small" />
            </Template>
        </RadzenDataGridColumn>
    </Columns>
</RadzenDataGrid>

